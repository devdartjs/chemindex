{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "node/no-unpublished-import": "off",
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-console": "off",
    "eqeqeq": ["error", "always"],
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-missing-import": "off"
  }
}
