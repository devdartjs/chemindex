{
  "name": "chemindex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "jest --watch",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "prettier:check": "prettier --check \"src/**/*.js\"",
    "prettier:write": "prettier --write \"src/**/*.js\"",
    "create-admin": "node admin/sign-up-admin.js",
    "index": "curl -i http://localhost:3000",
    "seed:user": "curl -i -X POST http://localhost:3000/api/v1/users/auth/sign-up -H 'Content-Type: application/json' -d '{\"email\": \"test@example.com\", \"password\": \"password12345\"}'",
    "user:login": "curl -i -s -c cookies.txt -X POST http://localhost:3000/api/v1/users/auth/login -H 'Content-Type: application/json' -d '{\"email\": \"test@example.com\", \"password\": \"password12345\"}'",
    "docs": "swagger-cli bundle -o swagger.json",
    "build:gh": "rimraf build && babel src --out-dir build --copy-files --verbose",
    "build": "rm -rf build && mkdir build && npx babel src --out-dir build --copy-files --verbose && find build -type f -name '*.js' -exec npx terser {} --output {} --compress --mangle --source-map \\;"
  },
  "keywords": [
    "node",
    "express",
    "api",
    "mongodb"
  ],
  "author": "devdartjs",
  "license": "ISC",
  "description": "API REST to manage chemical reagents",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.7",
    "@arcjet/node": "^1.0.0-beta.7",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "escape-html": "^1.0.3",
    "express": "^4.21.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.0",
    "morgan": "^1.10.0",
    "sanitize-html": "^2.16.0",
    "validator": "^13.15.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^30.2.0",
    "clean-css": "^5.3.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "html-minifier-terser": "^7.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "swagger-cli": "^4.0.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "terser": "^5.43.0"
  }
}
